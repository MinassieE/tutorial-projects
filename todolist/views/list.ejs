<%- include("header") -%>
<body>
    <div class="box">
        <h1 id="heading"> <%= ListTitle %>'s List </h1>
    </div>
    
    <div class="box">
        <% for(let i=0; i< newListItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= newListItems[i] %></p>
            </div>
        <% } %>
        <form action="/" class="item" method="post">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="list" value="<%= ListTitle %>">+</button>
        </form>
    </div>
    
    
</body>
<%- include("footer") -%>